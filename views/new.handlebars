<div class="container d-flex flex-column align-items-center my-4 mx-5">
  <span class="text-muted">請輸入您的支出</span>

  <form action="/records/new" method="POST">
    <div class="form-group d-flex justify-content-between my-4" style="width: 300px;">
      <label for="name">名稱：</label>
      <input type="text" class="form-control" id="name" name="name" style="width: 200px;" required>
    </div>

    <div class="form-group d-flex justify-content-between my-4" style="width: 300px;">
      <label for="date">日期：</label>
      <input type="date" class="form-control" id="date" name="date" style="width: 200px;" required>
    </div>

    <div class="form-group d-flex justify-content-between my-4" style="width: 300px;">
      <label for="icon">類別：</label>
      <select class="form-control" id="icon" name="icon" style="width: 200px;" required>
        <option value="fas fa-home">家居物業</option>
        <option value="fas fa-shuttle-van">交通出行</option>
        <option value="fas fa-grin-beam">休閒娛樂</option>
        <option value="fas fa-utensils">餐飲食品</option>
        <option value="fas fa-pen">其他</option>
      </select>
    </div>

    <div class="form-group d-flex justify-content-between my-4" style="width: 300px;">
      <label for="merchant">店家：</label>
      <input type="text" class="form-control" id="merchant" input="number" name="merchant" style="width: 200px;"
        required>
    </div>

    <div class="form-group d-flex justify-content-between my-4" style="width: 300px;">
      <label for="amount">金額：</label>
      <input type="number" class="form-control" id="amount" input="number" name="amount" style="width: 200px;" required>
    </div>

    <button class="btn active text-white border-dark mt-3" type="submit"
      style="width: 150px;background-color: rgb(240, 65, 65); font-size: 20px; margin-left: 130px;">新增</button>
  </form>
</div>