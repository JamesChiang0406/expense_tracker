<div class="container d-flex flex-column align-items-start" style="margin-left: 400px;">
  <div class="dropdown mt-5">
    <button class="btn btn-transparent dropdown-toggle d-flex align-items-center justify-content-between border-dark"
      type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
      style="width: 350px;">
      類別
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="width: 350px;">
      <a class="dropdown-item" href="#">家居物業</a>
      <a class="dropdown-item" href="#">交通出行</a>
      <a class="dropdown-item" href="#">休閒娛樂</a>
      <a class="dropdown-item" href="#">餐飲食品</a>
      <a class="dropdown-item" href="#">其他</a>
    </div>
  </div>

  <div class="totalAmount d-flex mt-4">
    <span>總金額：</span>

    <h1 class="ml-3 mt-2" style="color:lightsalmon; font-size: 90px;">{{totalAmount}}</h1>
  </div>
  {{#each items}}
  <div class="outcome d-flex justify-content-between align-items-center mt-3">
    <div class="d-flex justify-content-between align-items-center" style="width: 330px;">
      <div class="d-flex align-items-center">
        <i class="{{this.icon}} mr-2" style="font-size: 25px; color: rgb(176, 202, 250);"></i>

        <div class="d-flex flex-column">
          <small style="font-size: 5mm;">{{this.name}}</small>
          <small class="text-muted" style="font-size: 1mm;">{{this.date}}</small>
        </div>
      </div>

      <span class="price">{{this.amount}}</span>
    </div>

    <div class="d-flex ml-5">
      <button type="submit" class="btn">修改</button>
      <button type="submit" class="btn ml-2">刪除</button>
    </div>
  </div>
  {{/each}}

  <a href="#" class="btn btn-lg active text-white border-dark mt-4" role="button" aria-pressed="true"
    style="width: 200px;background-color: coral; font-size: 20px; margin-left: 100px;">新增支出</a>
</div>